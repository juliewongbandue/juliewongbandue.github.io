<script src="//maps.google.com/maps/api/js?key=AIzaSyC9hB_XrwWpNCR-4tP_TFCRQMiFkGPcI5I"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class = "logoBanner-backgroundDiv"><%= render :partial => "shared/banner" %></div>

<h1 class = "robotoCondensedBold welcomeText">JOB PROFILE PAGE</h1>

<div class = "wrapper jobProfileWrapper">
  <iframe class="savedJobMap"
  frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA6QiS1kwyDqVnvz78k691sJdDeXXe_V3k&q=<%= @location %>" allowfullscreen>
  </iframe>
  <!-- column formatting -->
  <div class = "savedJobFlex">
      <% @saved_job.each do |x| %>
      <div class = "robotoMono savedJobDetails">
        <h3 class = "robotoCondensedBold welcomeText"><%= x.title %></h3>
        LOCATION: <%= x.location %>
        <br>POSITION: <%= x.position %>
        <br>WEBSITE: <%= x.website.html_safe %>
        <br>HOW TO APPLY: <%= x.apply.html_safe %>
      </div>
      <div class = "savedJobDescription robotoMono">
        <br>DESCRIPTION: <%= x.description.html_safe %>
    </div>
  </div>

    <div class = "savedJobFlex">

    <div class = "taskDiv">
      <h3 class = "robotoMono divHeader">TO DO LIST</h3>
      <% if @todo %>
        <% @todo.each do |x|%>
        <div class = "task robotoMono">
          <%= button_to("x", delete_task_path(:task_id => x.id), method: "delete", class: "deleteButton") %>
          <div class = "checkBoxDiv">
            EMAILED: <%= x.emailed %>
            RESPONDED: <%= x.responded %>
          </div>
          NOTE: <%= x.note %>
            <!-- EDIT FORM HERE!!!! -->
            <%= form_for(:task, url: "/users/#{params[:id]}/to_dos/#{x.id}/edit", method: "get") do |f|%>
              <%= f.hidden_field(:id, :value => x.id) %>
            <%= f.submit("Edit Note", class: "button") %>
          <%end%>
        </div>
      <%end%>
      <%end%>
    </div>


    <!-- task form here -->
      <div class = "addTaskForm">
        <%= form_for (:task), :html => {:class => "addTaskForm robotoMono"}, url: "/users/#{params[:id]}/to_dos", method: "post" do |f|%>
        <div class = "checkBoxDiv">
          <div>
            <%= f.label :EMAILED? %>
            <%= f.check_box :emailed%>
          </div>
          <div>
            <%= f.label :RESPONDED? %>
            <%= f.check_box :responded %>
          </div>
        </div>
        <%= f.text_area :note, :placeholder => "add a note here", :class => "robotoMono" %>
        <%= f.hidden_field(:job, :value => x.id) %>
        <%= f.hidden_field(:user, :value => session[:user_id]) %>
        <%= f.submit("Add Task", class: "button") %>
        <%end%>
      </div>
    <%end%>
  </div>

</div>
