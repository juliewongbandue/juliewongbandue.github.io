<script src="//maps.google.com/maps/api/js?key=AIzaSyC9hB_XrwWpNCR-4tP_TFCRQMiFkGPcI5I"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class = "logoBanner-backgroundDiv">
  <%= render './shared/banner' %>
</div>

<div class = "wrapper">
  <div class ="jobListingWrapper">
    <div class = "jobListingDiv">
      <div class = "robotoMono jobDetails">
        <h1 class = "robotoCondensedBold welcomeText"><%= @title %></h1>
        LOCATION: <%= @location %>
        <br>SITE: <a href="<%= @website.html_safe %>" class= "link"><%=@website.html_safe%></a>
        <br>POSITION: <%= @position %>
        <br>HOW TO APPLY: <%= @apply.html_safe %>
      </div>
      <div class = "jobDescriptionDiv robotoMono">
        <div class = "jobDescription">
          <%= @description.html_safe %>
        </div>
      </div>
    </div>

    <div class = "mapDiv">
      <!-- map -->
      <iframe class="map"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyA6QiS1kwyDqVnvz78k691sJdDeXXe_V3k&q=<%= @location %>" allowfullscreen>
    </iframe>
    <div>
        <nav>
          <!-- form to save -->
          <%= form_for(:job, url: "/users/#{params[:id]}", :method => "post") do |f| %>
            <%= f.hidden_field(:title, :value => @title) %>
            <%= f.hidden_field(:location, :value => @location)%>
            <%= f.hidden_field(:description, :value => @description)%>
            <%= f.hidden_field(:website, :value => @website)%>
            <%= f.hidden_field(:position, :value => @position)%>
            <%= f.hidden_field(:apply, :value => @apply)%>
            <%= f.submit"save job", class: "button saveButton" %>
          <%end%>
          <!-- button to go back to search -->
          <%= button_to("meh, back to search", "/users/#{params[:id]}/favejobs/search", method: "get", class: "button backToSearchButton") %>
        </nav>
      </div>
    </div>
  </div>
</div>



